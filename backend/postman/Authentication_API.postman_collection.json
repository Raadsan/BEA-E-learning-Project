{
	"info": {
		"_postman_id": "auth-api-collection",
		"name": "BEA Authentication API",
		"description": "Authentication endpoints for BEA E-learning Platform - Supports Admin, Student, and Teacher roles",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login (Auto-detect Role)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.success && jsonData.token) {",
									"        pm.environment.set(\"auth_token\", jsonData.token);",
									"        pm.environment.set(\"user_role\", jsonData.user.role);",
									"        pm.environment.set(\"user_id\", jsonData.user.id);",
									"        console.log(\"Token saved: \" + jsonData.token);",
									"        console.log(\"User role: \" + jsonData.user.role);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@bea.com\",\n    \"password\": \"admin123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Login endpoint that automatically detects user role (admin, student, or teacher) based on email.\n\n**Priority order:** Admin → Teacher → Student\n\n**Note:** No need to specify role - system detects it automatically."
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"description": "JWT token from login response"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/me",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"me"
							]
						},
						"description": "Get current authenticated user information using JWT token."
					},
					"response": []
				}
			],
			"description": "Authentication endpoints"
		},
